<div class="container">
    <h1><%= @products_category.title %></h1>
    <div class="row">
        <% if @products_category.products.empty? %>
            <p>В категории ещё нету товаров.</p>
            <% end %>
                <% @products.each do |p| %>
                    <div class="col-md-4">
                        <%= link_to p do %>
                            <%= image_tag p.cover.url(:thumb) %>
                                <% end %>
                                    <p>
                                        <%= link_to p.title, p %>
                                    </p>
                                    <p>
                                        <%= number_to_currency_rub(p.price) %>
                                    </p>
                                    <%= button_to 'Добавить в корзину', line_items_path(product_id: p.id), class: 'btn btn-primary' %>
                    </div>
                    <% end %>
    </div>
    <p>
        <%= raw @products_category.description %>
    </p>
</div>
</div>
